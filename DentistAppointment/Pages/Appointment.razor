@page "/appointment"
@using DentistAppointment.Business.Services

<PageTitle>Afspraak</PageTitle>

<h1>Afspraak</h1>

<p>Naam: @name</p>
<p>Datum: @date</p>

<MudButton @onclick="ShowAppointment" >Toon een afspraak</MudButton>

@code {
    private string? name = string.Empty;
    private string? date = string.Empty;

    private void ShowAppointment()
    {
        var appointment = new AppointmentService().GetAppointment();
        name = appointment.Name;
        date = appointment.Date.ToShortDateString();
    }
}
